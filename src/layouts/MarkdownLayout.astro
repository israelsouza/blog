---
import Layout from "./Layout.astro";

interface Props {
    frontmatter: {
        title: string;
        description?: string;
    };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <article
        class="prose dark:prose-invert prose-lg mx-auto prose-h1:font-bold prose-h1:text-4xl prose-a:text-blue-600 dark:prose-a:text-blue-400"
    >
        <slot />
    </article>
</Layout>
