---
interface Props {
    title: string;
    description: string;
    href: string;
}

const { href, title, description } = Astro.props;
---

<article
    class="p-6 border border-gray-200 dark:border-gray-700 rounded-xl hover:shadow-lg transition-shadow bg-white dark:bg-gray-800 h-full"
>
    <a href={href} class="block h-full">
        <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-gray-100">
            {title}
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
            {description}
        </p>
    </a>
</article>
