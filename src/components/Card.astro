---
export type ZettelType = "Fleeting" | "Literature" | "Permanent";

interface Props {
    title: string;
    description: string;
    href: string;
    zettelType?: ZettelType;
    tags?: string[];
}

const {
    href,
    title,
    description,
    zettelType = "Fleeting",
    tags = [],
} = Astro.props;

const typeColors: Record<ZettelType, string> = {
    Fleeting:
        "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
    Literature: "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
    Permanent:
        "bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-300",
};
---

<article
    class="p-6 border border-gray-200 dark:border-gray-700 rounded-xl hover:shadow-lg transition-shadow bg-white dark:bg-gray-800 h-full relative group"
>
    <a href={href} class="block h-full">
        <div class="flex items-center gap-2 mb-3">
            <span
                class={`px-2.5 py-0.5 rounded-full text-xs font-medium ${typeColors[zettelType]}`}
            >
                {zettelType}
            </span>
            {
                tags.map((tag) => (
                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                        #{tag}
                    </span>
                ))
            }
        </div>
        <h3
            class="text-xl font-bold mb-2 text-gray-900 dark:text-gray-100 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"
        >
            {title}
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
            {description}
        </p>
    </a>
</article>
